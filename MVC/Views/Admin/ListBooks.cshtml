@model IEnumerable<Entities.BookModel>

@{
    ViewBag.Title = "Ändra eller radera bok";
}



<table class="table ">
    <thead>
        <tr>
            <th>
                Titel
            </th>
            <th >
               Bild adress
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ISBN)
            </th>
            
            
            <th>
                @Html.DisplayNameFor(model => model.PublishingDate)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                Format
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.QuantityInStock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Publisher.Name)
            </th>
            <th>
                Ändringar
            </th>
        </tr>
    </thead>
        @foreach (var item in Model)
        {
            <tr >
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td >
                    <a href="@Html.DisplayFor(modelItem => item.ImagePath)"><img src="@Html.DisplayFor(modelItem => item.ImagePath)"></a>
</td>
                <td>
                    @Html.DisplayFor(modelItem => item.ISBN)
                </td>
                
               
                <td>
                    @Html.DisplayFor(modelItem => item.PublishingDate.Year)
                </td>
                
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Format.Name)
                </td>
                
                <td>
                    @Html.DisplayFor(modelItem => item.QuantityInStock)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Publisher.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

</table>
