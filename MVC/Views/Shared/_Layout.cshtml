                                            <li><a href="#"><input type="submit" class="menuopt" value="Danskt band" /></a></li>
                                            <li><a href="#"><input type="submit" class="menuopt" value="Kartonnage" /></a></li>
                                            <li><a href="#"><input type="submit" class="menuopt" value="Pocket" /></a></li>
                                            <li><a href="#"><input type="submit" class="menuopt" value="" /></a></li>
                                            <li><a href="#"><input type="submit" class="menuopt" value="" /></a></li>
                                            <li><a href="#" style="height:14px"><input type="submit" class="menuopt" value="" /></a></li>

                                        </ul>
                                    </div>
                                </div>
                            </li>
                            @Html.Hidden("search", "")
                        }
                        <li class="divider"></li>

                        @using (Ajax.BeginForm("Search", "Home",
                            new AjaxOptions { UpdateTargetId = "divList", InsertionMode = InsertionMode.Replace, HttpMethod = "Post" }, new {@id = "sForm", @name = "sForm", @class = "search-field" }))
                        {

                            <li class="has-button search-field ">
                                <input type="submit" class="small button search-field" value="Search" />
                            </li>
                            <li class="search">

                                <input type="text" id="search" name="search" class="long" placeholder="Sök på titel, författare, format, ISBN, kategori eller språk ">

                            </li>
                        }


                    </ul>

                    <ul class="right">




                        <li class="has-dropdown not-click " id="cart">@Html.Partial("_CartWidgetView")</li>


                    </ul>
                </section>
    </nav>




        <div id="loadingDiv" loader>
            <img src="~/Content/spinner.gif" class="ajax-loader" />
        </div>

    


        <div class="container body-content">
            @RenderBody()


        </div>

        <footer class="row">
           
                <hr />
                <div class="row">
                    <div class="large-6 columns">
                        <p class="footer">©@DateTime.Now.Year - Book OnClick</p>
                    </div>
                    <div class="large-6 columns">
                       
                    </div>
                </div>
           
        </footer>




        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/foundation")
        @Scripts.Render("~/bundles/jqueryval")

        @RenderSection("scripts", required: false)

        <script src="~/Scripts/slider.js"></script>
    <script>
        $(document).ready(function () {
            $(function () {
          
                $("#sForm #search").autocomplete({
                    source: '@Url.Action("GetBookTitle")',
                    minLength: 2

                });
            });
        })
    </script>






</body>
</html>
