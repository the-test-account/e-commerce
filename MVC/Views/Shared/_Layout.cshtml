                        <li class="divider"></li>
                        <li>@Html.ActionLink("Kontakt", "Contact", "Home")</li>
                        <li class="divider"></li>
                        @using (Ajax.BeginForm("Search", "Home",
                            new AjaxOptions { UpdateTargetId = "divList", InsertionMode = InsertionMode.Replace, HttpMethod = "Post" }, new { @style = "float:left;" }))
                        {
                            <li class="show-for-large-up">


                                <a href="#" data-dropdown="mega-menu-1" class="kategori" data-options="is_hover:true">Välj kategori</a>

                                <div id="mega-menu-1" data-dropdown-content class="large f-dropdown content row">
                                    <div class="large-4 columns">
                                        <ul>
                                            <li><label>KATEGORIER A-H</label></li>
                                            <li><a href="#"><input type="submit" class="menuopt" value="Barnböcker" /></a></li>
                                            <li><a href="#"><input type="submit" class="menuopt" value="Biografier & Memoarer" /></a></li>
                                            <li><a href="#"><input type="submit" class="menuopt" value="Datorer & IT" /></a></li>
                                            <li><a href="#"><input type="submit" class="menuopt" value="Deckare" /></a></li>
                                            <li><a href="#"><input type="submit" class="menuopt" value="Djur & Natur" /></a></li>
                                            <li><a href="#"><input type="submit" class="menuopt" value="Ekonomi & Juridik" /></a></li>
                                            <li><a href="#"><input type="submit" class="menuopt" value="Familj & Hälsa" /></a></li>
                                            <li><a href="#"><input type="submit" class="menuopt" value="Filosofi & Religion" /></a></li>
                                            <li><a href="#"><input type="submit" class="menuopt" value="Geografiska områden" /></a></li>
                                            <li><a href="#"><input type="submit" class="menuopt" value="Hem & Trädgård" /></a></li>
                                            <li><a href="#"><input type="submit" class="menuopt" value="Historia & Arkeologi" /></a></li>
                                            <li><a href="#"><input type="submit" class="menuopt" value="Humor & Presentböcker" /></a></li>


                                        </ul>
                                    </div>
                                    <div class="large-4 columns">
                                        <ul>

                                            <li><label>KATEGORIER K-S</label></li>

                                            <li><a href="#"><input type="submit" class="menuopt" value="Kokböcker" /></a></li>
                                            <li><a href="#"><input type="submit" class="menuopt" value="Konst & Musik" /></a></li>
                                            <li><a href="#"><input type="submit" class="menuopt" value="Litteraturvetenskap" /></a></li>
                                            <li><a href="#"><input type="submit" class="menuopt" value="Medicin" /></a></li>
                                            <li><a href="#"><input type="submit" class="menuopt" value="Naturvetenskap & Teknik" /></a></li>
